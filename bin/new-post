#!/usr/bin/env ruby

require 'time'

title = ARGV[0]
slug = "#{Date.today}-#{title.downcase.gsub(/[^\w]+/, '-')}"
file = File.join(File.dirname(__FILE__), '../', '_posts', slug + '.md')

File.open(file, "w") do |f|
  f << <<-EOS
---
layout: post
title: #{title}
---


## Conclusion
EOS
end

system ("#{ENV['EDITOR']} #{file}")
